<%= form_for @article do |f| %>
	<div class="field mt-3">
		<%= f.label :headline, class: 'form-check-label' %>
		<%= f.text_field :headline, class: 'form-control' %>
	</div>
	<div class="field mt-3">
		<%= f.label :content, class: 'form-check-label' %>
		<%= f.rich_text_area :content, class: 'form-control' %>
	</div>

	<%= f.submit class: 'form-control btn btn-success mt-3' %>
<% end %>